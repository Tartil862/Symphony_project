{% extends 'base.html.twig' %}

{% block title %}{{ 'category.title'|trans }}{% endblock %}

{% block page_title %}{{ 'category.title'|trans }}{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <p class="text-muted mb-0" style="font-size:.875rem">{{ 'category.catalog_desc'|trans }}</p>
        <a href="{{ path('app_category_new') }}" class="btn btn-accent">
            <i class="bi bi-plus-lg me-1"></i> {{ 'category.add'|trans }}
        </a>
    </div>

    {# Search Bar #}
    <div class="card mb-3">
        <div class="card-body py-3">
            <form method="get" action="{{ path('app_category_index') }}" class="d-flex gap-2 align-items-center">
                <div class="position-relative" style="flex:1;min-width:200px">
                    <i class="bi bi-search position-absolute" style="left:.8rem;top:50%;transform:translateY(-50%);color:#c4b5a0;font-size:.85rem"></i>
                    <input type="text" name="q" placeholder="{{ 'category.search_placeholder'|trans }}" value="{{ currentSearch }}"
                           class="form-control" style="padding-left:2.3rem;border:2px solid #ddd0bf;border-radius:.6rem;font-size:.85rem">
                </div>
                <button type="submit" class="btn btn-accent" style="padding:.45rem 1rem;font-size:.82rem">
                    <i class="bi bi-search me-1"></i> {{ 'common.search'|trans }}
                </button>
                {% if currentSearch %}
                    <a href="{{ path('app_category_index') }}" class="btn btn-ghost" style="color:#E54A5F;font-size:.82rem" title="{{ 'common.clear'|trans }}">
                        <i class="bi bi-x-lg"></i>
                    </a>
                {% endif %}
            </form>
        </div>
    </div>

    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <span><i class="bi bi-grid me-2"></i>{{ 'category.title'|trans }}</span>
            <span class="badge-count">{{ categories|length }}</span>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>{{ 'category.name'|trans }}</th>
                            <th class="text-end">{{ 'common.actions'|trans }}</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for category in categories %}
                        <tr>
                            <td><span class="text-muted">{{ category.id }}</span></td>
                            <td><strong>{{ category.name }}</strong></td>
                            <td class="text-end">
                                <a href="{{ path('app_category_show', {'id': category.id}) }}" class="btn btn-ghost" title="{{ 'common.show'|trans }}"><i class="bi bi-eye"></i></a>
                                <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-ghost" title="{{ 'common.edit'|trans }}"><i class="bi bi-pencil"></i></a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3" class="text-center py-5 text-muted">
                                <i class="bi bi-inbox" style="font-size:2rem"></i>
                                <p class="mt-2 mb-0">{{ 'category.no_categories'|trans }}</p>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
