<form method="post" action="{{ path('app_category_delete', {'id': category.id}) }}"
      data-confirm="{{ 'category.confirm_delete_msg'|trans({'%name%': category.name}) }}"
      data-confirm-title="{{ 'category.confirm_delete_title'|trans }}"
      data-confirm-icon="bi-trash3"
      data-confirm-variant="danger"
      data-confirm-btn="{{ 'common.delete'|trans }}"
      style="display:inline">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
    <button class="btn btn-danger-soft"><i class="bi bi-trash me-1"></i>{{ 'category.delete'|trans }}</button>
</form>
