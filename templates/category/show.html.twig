{% extends 'base.html.twig' %}

{% block title %}{{ 'category.title'|trans }} â€“ {{ category.name }}{% endblock %}

{% block page_title %}{{ 'category.show'|trans }}{% endblock %}

{% block body %}
    <div class="mb-4">
        <a href="{{ path('app_category_index') }}" class="btn btn-ghost">
            <i class="bi bi-arrow-left me-1"></i> {{ 'category.title'|trans }}
        </a>
    </div>

    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <span><i class="bi bi-grid me-2"></i>{{ category.name }}</span>
            <div class="d-flex gap-2">
                <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-outline-accent">
                    <i class="bi bi-pencil me-1"></i> {{ 'category.edit'|trans }}
                </a>
                {{ include('category/_delete_form.html.twig') }}
            </div>
        </div>
        <div class="card-body p-0">
            <table class="table detail-table mb-0">
                <tbody>
                    <tr>
                        <th>ID</th>
                        <td>{{ category.id }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'category.name'|trans }}</th>
                        <td>{{ category.name }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
