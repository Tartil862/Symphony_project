<form method="post" action="{{ path('app_supplier_delete', {'id': supplier.id}) }}"
      data-confirm="{{ 'supplier.confirm_delete_msg'|trans({'%name%': supplier.nameSupp}) }}"
      data-confirm-title="{{ 'supplier.confirm_delete_title'|trans }}"
      data-confirm-icon="bi-trash3"
      data-confirm-variant="danger"
      data-confirm-btn="{{ 'common.delete'|trans }}"
      style="display:inline">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ supplier.id) }}">
    <button class="btn btn-danger-soft"><i class="bi bi-trash me-1"></i>{{ 'supplier.delete'|trans }}</button>
</form>
