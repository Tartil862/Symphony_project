{% extends 'base.html.twig' %}

{% block title %}{{ 'supplier.title'|trans }} â€“ {{ supplier.nameSupp }}{% endblock %}

{% block page_title %}{{ 'supplier.show'|trans }}{% endblock %}

{% block body %}
    <div class="mb-4">
        <a href="{{ path('app_supplier_index') }}" class="btn btn-ghost">
            <i class="bi bi-arrow-left me-1"></i> {{ 'supplier.title'|trans }}
        </a>
    </div>

    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <span><i class="bi bi-truck me-2"></i>{{ supplier.nameSupp }}</span>
            <div class="d-flex gap-2">
                <a href="{{ path('app_supplier_edit', {'id': supplier.id}) }}" class="btn btn-outline-accent">
                    <i class="bi bi-pencil me-1"></i> {{ 'supplier.edit'|trans }}
                </a>
                {{ include('supplier/_delete_form.html.twig') }}
            </div>
        </div>
        <div class="card-body p-0">
            <table class="table detail-table mb-0">
                <tbody>
                    <tr>
                        <th>ID</th>
                        <td>{{ supplier.id }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'supplier.supplier_name'|trans }}</th>
                        <td>{{ supplier.nameSupp }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
