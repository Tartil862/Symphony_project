<!DOCTYPE html>
<html lang="{{ app.request.locale }}" data-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script>(function(){var t=localStorage.getItem('theme')||'light';document.documentElement.setAttribute('data-theme',t);})()</script>
    <title>{{ 'auth.verify_email_title'|trans }} â€“ {{ 'brand.name'|trans }}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        * { box-sizing: border-box; margin: 0; padding: 0; }
        body {
            font-family: 'Inter', sans-serif;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #FAF6F1 0%, #f0ebe3 100%);
            padding: 2rem;
        }
        .verify-card {
            background: #fff;
            border-radius: 1.4rem;
            box-shadow: 0 20px 60px rgba(0,0,0,.08), 0 4px 16px rgba(0,0,0,.04);
            padding: 3rem 2.5rem;
            max-width: 460px;
            width: 100%;
            text-align: center;
            animation: slideUp .5s cubic-bezier(.4,0,.2,1);
        }
        @keyframes slideUp {
            from { opacity:0; transform: translateY(20px); }
            to   { opacity:1; transform: translateY(0); }
        }
        .verify-icon {
            width: 80px; height: 80px;
            background: linear-gradient(135deg, #91B893, #7aa67c);
            border-radius: 50%;
            display: inline-grid; place-items: center;
            color: #fff; font-size: 2rem;
            margin-bottom: 1.5rem;
            box-shadow: 0 8px 24px rgba(145,184,147,.35);
            animation: pulse 2.5s ease-in-out infinite;
        }
        @keyframes pulse {
            0%,100% { box-shadow: 0 8px 24px rgba(145,184,147,.35); }
            50%      { box-shadow: 0 12px 36px rgba(145,184,147,.55); }
        }
        .verify-title {
            font-size: 1.6rem; font-weight: 800;
            color: #2A3638; margin-bottom: .5rem;
        }
        .verify-subtitle {
            font-size: .92rem; color: #6b7280; line-height: 1.6;
            margin-bottom: 1.5rem;
        }
        .verify-email-badge {
            display: inline-flex; align-items: center; gap: .5rem;
            background: linear-gradient(135deg, rgba(145,184,147,.12), rgba(145,184,147,.06));
            border: 1.5px solid rgba(145,184,147,.3);
            border-radius: 2rem;
            padding: .45rem 1.1rem;
            font-size: .88rem; font-weight: 600;
            color: #2A3638;
            margin-bottom: 1.8rem;
        }
        .verify-email-badge i { color: #91B893; }

        .verify-steps {
            background: #faf7f3;
            border-radius: .9rem;
            padding: 1.2rem 1.4rem;
            text-align: left;
            margin-bottom: 1.8rem;
        }
        .verify-step {
            display: flex; align-items: flex-start; gap: .7rem;
            font-size: .83rem; color: #475569;
            padding: .35rem 0;
        }
        .verify-step:not(:last-child) { border-bottom: 1px solid #ede9e2; }
        .verify-step-num {
            width: 22px; height: 22px; flex-shrink: 0;
            background: #2A3638; color: #fff;
            border-radius: 50%; display: grid; place-items: center;
            font-size: .68rem; font-weight: 800; margin-top: .05rem;
        }

        .btn-back {
            display: inline-flex; align-items: center; gap: .5rem;
            padding: .7rem 1.8rem;
            background: linear-gradient(135deg, #2A3638, #4a6264);
            color: #fff; border: none; border-radius: .7rem;
            font-size: .9rem; font-weight: 600;
            text-decoration: none;
            transition: all .3s ease;
            box-shadow: 0 4px 14px rgba(42,54,56,.25);
        }
        .btn-back:hover { transform: translateY(-2px); box-shadow: 0 8px 24px rgba(42,54,56,.35); color:#fff; }

        /* Dark mode */
        html[data-theme="dark"] body { background: linear-gradient(135deg, #0d1117 0%, #161b22 100%) !important; }
        html[data-theme="dark"] .verify-card { background: #161b22 !important; box-shadow: 0 20px 60px rgba(0,0,0,.4) !important; }
        html[data-theme="dark"] .verify-title { color: #c9d1d9 !important; }
        html[data-theme="dark"] .verify-subtitle { color: #8b949e !important; }
        html[data-theme="dark"] .verify-email-badge { background: rgba(145,184,147,.07) !important; border-color: rgba(145,184,147,.2) !important; color: #c9d1d9 !important; }
        html[data-theme="dark"] .verify-steps { background: #1c2329 !important; }
        html[data-theme="dark"] .verify-step { color: #8b949e !important; }
        html[data-theme="dark"] .verify-step:not(:last-child) { border-color: #30363d !important; }
        #themeToggleAuth {
            position: fixed; top: 1rem; right: 1rem; z-index:100;
            background: none; border: 1px solid rgba(0,0,0,.15); cursor: pointer;
            padding: .3rem .5rem; border-radius: .4rem; color: #2A3638;
            font-size: .9rem; line-height: 1.4; transition: all .2s ease;
            background: rgba(255,255,255,.85); backdrop-filter: blur(8px);
        }
        html[data-theme="dark"] #themeToggleAuth {
            border-color: rgba(255,255,255,.2) !important;
            color: #c9d1d9 !important;
            background: rgba(22,27,34,.85) !important;
        }
    </style>
</head>
<body>
    <button id="themeToggleAuth" onclick="(function(){var c=document.documentElement.getAttribute('data-theme')||'light';var n=c==='dark'?'light':'dark';document.documentElement.setAttribute('data-theme',n);localStorage.setItem('theme',n);document.getElementById('themeIconAuth').className='bi bi-'+(n==='dark'?'sun':'moon');})()" title="Toggle dark/light">
        <i class="bi" id="themeIconAuth"></i>
    </button>

    <div class="verify-card">
        <div class="verify-icon">
            <i class="bi bi-envelope-check-fill"></i>
        </div>

        <div class="verify-title">{{ 'auth.verify_email_title'|trans }}</div>
        <p class="verify-subtitle">{{ 'auth.verify_email_text'|trans }}</p>

        {% if email %}
            <div class="verify-email-badge">
                <i class="bi bi-envelope-fill"></i>
                {{ email }}
            </div>
        {% endif %}

        <div class="verify-steps">
            <div class="verify-step">
                <div class="verify-step-num">1</div>
                <span>{{ 'auth.verify_step1'|trans }}</span>
            </div>
            <div class="verify-step">
                <div class="verify-step-num">2</div>
                <span>{{ 'auth.verify_step2'|trans }}</span>
            </div>
            <div class="verify-step">
                <div class="verify-step-num">3</div>
                <span>{{ 'auth.verify_step3'|trans }}</span>
            </div>
        </div>

        <a href="{{ path('app_login') }}" class="btn-back">
            <i class="bi bi-arrow-left"></i> {{ 'auth.back_to_login'|trans }}
        </a>
    </div>

    <script>document.getElementById('themeIconAuth').className='bi bi-'+(localStorage.getItem('theme')==='dark'?'sun':'moon');</script>
</body>
</html>
