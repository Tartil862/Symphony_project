{% extends 'base.html.twig' %}

{% block title %}{{ 'product.edit'|trans }}{% endblock %}

{% block page_title %}{{ 'product.edit'|trans }}{% endblock %}

{% block body %}
    <div class="mb-4">
        <a href="{{ path('app_product_index') }}" class="btn btn-ghost">
            <i class="bi bi-arrow-left me-1"></i> {{ 'product.back'|trans }}
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="bi bi-pencil-square me-2"></i>{{ 'product.edit'|trans }}
                </div>
                <div class="card-body p-4">
                    {{ include('product/_form.html.twig', {'button_label': 'common.update'|trans}) }}
                </div>
            </div>
            <div class="text-end">
                {{ include('product/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
