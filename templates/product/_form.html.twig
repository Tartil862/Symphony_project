{{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
    {{ form_widget(form) }}
    {% if product is defined and product.image %}
        <div class="mt-3 mb-2">
            <label class="form-label" style="font-size:.82rem;color:#2A3638">{{ 'boycott.current_image'|trans }}</label>
            <div>
                <img src="{{ asset(product.imageFolder ~ '/' ~ product.image) }}" alt="Current image" 
                     style="max-width:200px;max-height:160px;object-fit:cover;border-radius:.6rem;box-shadow:0 4px 15px rgba(42,54,56,.12)">
            </div>
        </div>
    {% endif %}
    <div class="mt-4">
        <button class="btn btn-accent"><i class="bi bi-check-lg me-1"></i>{{ button_label|default('product.save'|trans) }}</button>
    </div>
{{ form_end(form) }}
